{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "compiler-version": [
      "error",
      "^0.8.9"
    ],
    "prettier/prettier": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "quotes": [
      "error",
      "double"
    ]
  }
}